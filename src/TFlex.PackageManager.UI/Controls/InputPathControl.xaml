<UserControl x:Class="TFlex.PackageManager.Controls.InputPathControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TFlex.PackageManager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" 
             d:DesignWidth="300">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" 
                 BorderBrush="White" 
                 Padding="2" 
                 Text="{Binding Value, RelativeSource={RelativeSource AncestorType=local:InputPathControl}}" 
                 IsReadOnly="True">
            
        </TextBox>
        <Button Name="buton1" Grid.Column="1" Width="Auto" Click="Button1_Click">
            <Image Width="16" Height="16"/>
        </Button>
    </Grid>
</UserControl>
