<UserControl x:Class="TFlex.PackageManager.Controls.InputSewingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TFlex.PackageManager.Controls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="30" 
             d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="26"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <CheckBox Name="checkBox" 
                  Grid.Column="0" 
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Center" 
                  IsChecked="{Binding Value.IsChecked}"
                  Checked="CheckBox_Checked" 
                  Unchecked="CheckBox_Unchecked"/>
        <xctk:DoubleUpDown Name="doubleUpDown" 
                           Grid.Column="1" 
                           Width="Auto" 
                           Increment="0.1" 
                           Minimum="0.1"
                           Value="{Binding Value.Accuracy}"/>
    </Grid>
</UserControl>